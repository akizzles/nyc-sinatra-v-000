<h1>Update/Edit "<%=@figure.name%>"</h1>

ID: <%= @figure.id %>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value='patch'>

  <label><h3>Name</h3></label>
  <input type="text" name="figure[name]" id='figure_name' value='<%=@figure.name%>'><br>

  <label><h3>Existing Titles:</h3></label>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="<%=title.name%>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><br></br>
  <% end %>

  <label><h3>Add a New Title:</h3></label>
  <input type="text" id="new_title" name="title[name]"><br></br>

  <label><h3>Existing Landmarks:</h3></label>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.name%>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><br></br>
  <% end %>

  <label><h3>Add a New Landmark:</h3></label>
  <input type="text" id="new_landmark" name="landmark[name]"><br></br>

  <input type="submit" value="Edit Figure">

</form>
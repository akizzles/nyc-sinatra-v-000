<form action='/figures' method='post'>
  <h1>Create a New Figure Form</h1>

  <label><h3>Name</h3></label>
  <input type="text" id="figure_name" name="figure[name]"><br></br>
  
  <label><h3>Existing Titles:</h3></label>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>"><br></br>
  <% end %>


  <label><h3>Create a New Title:</h3></label>
  <input type="text" id="new_title" name="title[name]"><br></br>

  <label><h3>Existing Landmarks:</h3></label>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id %>"><br></br>
  <% end %>

  <label><h3>Create a New Landmark:</h3></label>
  <input type="text" id="new_landmark" name="landmark[name]"><br></br>


  <input type="submit" value="Create New Figure"><br></br>
</form>